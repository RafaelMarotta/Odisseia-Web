@model IList<Models.Relatorio.BasicReportClassDTO>
@using Utils;

<link rel="stylesheet" href="~/css/ViewRelatorioTurma.css" />
<script type="text/javascript" src="~/js/ViewRelatorioTurma.js"></script>
<script type="text/javascript" src="~/js/ViewRelatorioTurma/FlowController.js"></script>
<script type="text/javascript" src="~/js/HTTPDAL.js"></script>
<div class="row">
    <div class="col-md">
        <h4 class="mb-20"><u>RELATÓRIO DE MISSÃO POR TURMA</u></h4>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        @foreach (Models.Relatorio.BasicReportClassDTO report in Model)
        {
            <div class="card">
                <div class="card-body text-center">
                    <div class="col-md">
                        <h5 class="mb-3">@report.Title</h5>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <h6><u>MÉDIA ACERTOS</u></h6>
                                <h5>@DateUtils.FormatPercentage(report.RightAverage)</h5>
                            </div>
                            <div class="col-md-6">
                                <h6><u>MÉDIA ERROS</u></h6>
                                <h5>@DateUtils.FormatPercentage(report.WrongAverage)</h5>
                            </div>
                        </div>
                        <div class="row text-center">
                            <div class="col-md">
                                <h6>TEMPO MÉDIO GASTO: @DateUtils.FormatTimeSpan(report.TimeAverage)</h6>
                            </div>
                        </div>
                        <div class="row">
                            <button type="button" class="btn laranja_back white mt-3" onclick="getReportStudent(@report.Id)">VER RESULTADO POR ALUNO</button>
                        </div>
                    </div>
                </div>
            </div>
        }
        </div>
    <div class="col-md-8">

        <div id="ResultStudent">
            <h5>Alunos</h5>
            <div class="card mb-3">
                <div class="card-body" id="tableResultStudent">

                </div>
            </div>
        </div>

    </div>
</div>

<div id="ResultStudentCard" hidden>

    <div class="row text-center">
        <div class="col-md-3">
            <h6>_StudentName_</h6>
        </div>
        <div class="col-md-3">
            <h6><u>ACERTOS</u></h6>
            <h5>_RightCount_</h5>
        </div>
        <div class="col-md-3">
            <h6><u>ERROS</u></h6>
            <h5>_WrongCount_</h5>
        </div>
        <div class="col-md-3">
            <h6>TEMPO GASTO: _TimeSpent_</h6>
        </div>
    </div>

</div>
