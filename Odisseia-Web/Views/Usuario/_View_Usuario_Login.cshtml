@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <environment include="Development,Production">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/general.css" />
        <link rel="stylesheet" href="~/css/sideBar.css" />
        <link rel="stylesheet" href="~/css/styleExtra.css" />
        <link rel="stylesheet" href="~/css/ViewUsuarioLogin.css" />
    </environment>

</head>
<body>
    <div class="overlay"></div>
    <nav class="navbar navbar-expand-sm">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" asp-action="Logout" asp-controller="Usuario">
                    <img src="~/images/icon_arrow_back.png" class="img-fluid arrow-back" />
                    VOLTAR
                </a> <!-- Mudar para ActionLink -->
            </li>
        </ul>
    </nav>

    <div class="card card-default">
        <div class="card-body card-6-6">
            <h4 class="white mb-30"><u>Login</u></h4>
            <form asp-action="Login" asp-controller="Usuario">
                <div class="form-group">
                    <label class="cinza_secundary font" for="email">Email:</label>
                    <input type="email" class="form-control inputCustom white" name="UsuarioLogin">
                </div>
                <div class="form-group">
                    <label class="cinza_secundary" for="pwd">Senha:</label>
                    <input type="password" class="form-control inputCustom white" name="UsuarioSenha">
                </div>
                <button type="submit" class="btn btn-primary mt-10"
                        style="width: 100%; background-color: #213950; border: none;">
                    ENTRAR
                </button>
                @try
                {
                    if (bool.Parse(ViewData["error"].ToString()))
                    {
                        <p style="color:red"> @ViewData["errorMessage"].ToString() </p>
                    }
                }
                catch (Exception) { }
            </form>
        </div>
    </div>


</body>
</html>
